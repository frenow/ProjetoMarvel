<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

  <style>
    #custom-search-input{
    padding: 3px;
    border: solid 1px #E4E4E4;
    border-radius: 6px;
    background-color: #fff;
}

#custom-search-input input{
    border: 0;
    box-shadow: none;
}

#custom-search-input button{
    margin: 2px 0 0 0;
    background: none;
    box-shadow: none;
    border: 0;
    color: #666666;
    padding: 0 8px 0 10px;
    border-left: solid 1px #ccc;
}

#custom-search-input button:hover{
    border: 0;
    box-shadow: none;
    border-left: solid 1px #ccc;
}

#custom-search-input .glyphicon-search{
    font-size: 23px;
}
  </style>
  </head>
  <body>

  <h1>Ola, {{profile.displayName}}</h1>
  <h2>ID: {{profile.id}}</h2>
  <br>

<form action="/personagens/" method="POST">
<div class="container">
	<div class="row">
        <div class="col-md-6">
    		<h2>Buscar Personagens</h2>
            <div id="custom-search-input">
                <div class="input-group col-md-12">                 
                    <input type="text" name="personagem" id="personagem" class="form-control input-lg" placeholder="Buscar" />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>                        
                    </span>                  
                </div>
            </div>
        </div>
	</div>
</div>
</form>
<br><br><br><br>
  <a href="/insertfavoritos/" class="btn btn-info btn-lg">
          <span class="glyphicon glyphicon-list-alt"></span> Listar Favoritos</a>
  <a href="/logout" class="btn btn-info btn-lg">
          <span class="glyphicon glyphicon-log-out"></span> Log out</a>
  </body>
</html>